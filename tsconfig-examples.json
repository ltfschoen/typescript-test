    "outFile": "./build/examples.js",
    "sourceMap": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "module": "system",
    "moduleResolution": "node",
    "removeComments": false,
    "target": "es6",
    "typeRoots": ["./node_modules/@types"],
    "types" : []
